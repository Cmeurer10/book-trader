<% delete_message = "Are you sure? This will remove the book from your dashboard as well."  %>

<div class="container">
  <h2>You are selling:</h2>
      <div class="row">
        <% @user.books.each do |book| %>
          <div class="col-xs-12 col-sm-4 list-card">
            
            <% title = book.title.strip.gsub(/[[:punct:]]/, ' ').split.map(&:capitalize).join(' ') %>

            <%= link_to "/books/#{title.gsub(' ', '_')}", method: 'get' do %>
              <div class="list-book-picture" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                url(<%= image_path "100x100.png" || book.cover %>);"></div>
              <div class="card-description">
                <h2><%= title %></h2>
                <p><%= link_to "Edit this book", "dashboard/update/#{book.id}" %></p>
                <p><%= link_to "Remove from store", "dashboard/#{book.id}", method: :delete, data: { confirm: delete_message } %></p>
              </div>
            <% end %>

          </div>
        <% end %>
      </div>
</div>
