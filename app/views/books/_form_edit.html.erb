<%= simple_form_for(@book, url: "/dashboard/#{book.id}") do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :edition %>
    <%= f.input :condition, collection: ['Poor', 'Fair', 'Good', 'Like New'] %>
    <%= f.input :price %>
    <%= f.input :subject %>
    <%= f.input :description %>
    <%= f.input :isbn %>
    <%= f.input :publisher %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
