<%= simple_form_for(@book) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :edition %>
    <%= f.input :condition %>
    <%= f.input :price %>
    <%= f.input :class %>
    <%= f.input :description %>
    <%= f.input :sold %>
    <%= f.association :purchase %>
    <%= f.association :user %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
