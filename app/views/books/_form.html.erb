<div class="row">
  <div class="form col-xs-12 col-md-6 col-md-offset-3">
    <%= simple_form_for(@book, url: "/dashboard") do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :title %>
        <%= f.input :edition %>
        <%= f.input :condition, collection: ['Poor', 'Fair', 'Good', 'Like New'] %>
        <%= f.input :price %>
        <%= f.input :subject %>
        <%= f.input :description %>
        <%= f.input :isbn %>
        <%= f.input :publisher %>
        <%= f.button :submit %>
      </div>
    <% end %>
  </div>
  </div>