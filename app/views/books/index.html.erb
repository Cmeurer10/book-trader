<p id="notice"><%= notice %></p>

<h1>Results for <%= params[:title] %></h1>
<div class="results">
  <div class="row">
    <div class="col-md-10">

      <% @books.each do |book| %>
        <%= link_to "/books/#{book.title.gsub(' ', '_')}", method: 'get' do %>
          <div class="col-xs-6 col-sm-4">
            <div class="book-card">
              <div class="card-book-picture"><%= image_tag "100x100.png" %></div>
              <div class="card-description">
                <h2><%= book.title.strip.gsub(/[[:punct:]]/, ' ').split.map(&:capitalize).join(' ') %></h2>
                <p><%= book.publisher %></p>
              </div>
              <a class="card-link" href="#" ></a>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
    <div class="sidebar col-md-2">
      <%= render 'filter-sidebar' %>
    </div>
  </div>
</div>
